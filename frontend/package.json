{
  "name": "evelstar-recruitment-frontend",
  "version": "1.0.0",
  "main": "index.js",
  "description": "Evelstar Recruitment Frontend",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.11.9",
    "@mui/material": "^5.11.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.54.4",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-redux": "^7.1.25",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^4.1.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "global-jsdom": "^24.0.0",
    "husky": "^7.0.4",
    "jsdom": "^24.0.0",
    "prettier": "^2.2.1",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "url-loader": "^4.1.1",
    "vite": "^4.4.9",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^1.4.0"
  },
  "scripts": {
    "test": "vitest --passWithNoTests",
    "start": "vite serve --port 8081",
    "start-server": "cd ../backend && yarn && yarn dev",
    "build": "vite build",
    "prettier:fix": "./node_modules/.bin/prettier './src/**/*.(ts|tsx|scss)' --write",
    "postinstall": "cd ../ && husky install ./frontend/.husky && cd frontend"
  },
  "license": "MIT"
}
