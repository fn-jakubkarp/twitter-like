{
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "skipLibCheck": true,

    /* Bundler mode */

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./*"],
      "react": ["./node_modules/@types/react"],
      "js-cookie": ["./node_modules/@types/js-cookie"]
    }
  },
  "include": ["src", "test", "__mocks__", "src/components/modal/documents/.tsx", "utils"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
